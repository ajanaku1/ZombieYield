# ZombieYield Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# Solana Network Configuration
# ===========================================

# Network: devnet, testnet, or mainnet-beta
# Default: devnet (safest for development)
VITE_SOLANA_NETWORK=devnet

# Custom RPC Endpoint (optional)
# Leave empty to use default cluster RPC
# For production, use a paid provider like Helius, QuickNode, or Alchemy
# Examples:
#   VITE_SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY
#   VITE_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
VITE_SOLANA_RPC_URL=

# ===========================================
# Torque SDK Configuration
# ===========================================

# Torque API server URL (default: https://server.torque.so)
# The SDK handles auth via wallet SIWS â€” no API key needed.
VITE_TORQUE_API_URL=https://server.torque.so

# Set to "true" to force mock rewards (offline dev, no Torque)
VITE_USE_MOCK_REWARDS=false

# ===========================================
# Application Configuration
# ===========================================

VITE_APP_NAME=ZombieYield
VITE_APP_VERSION=1.0.0
